{
  "name": "Ansible Control Node",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:1": {}
  },
  "containerEnv": {
    "ANSIBLE_SSH_KEY": "${localEnv:ID_ED25519}"
  },
  "postCreateCommand": "pip install ansible && eval $(ssh-agent -s) && echo \"$ANSIBLE_SSH_KEY\" | tr -d '\\r' | ssh-add -",
  "remoteEnv": {
    "SSH_AUTH_SOCK": "${localEnv:SSH_AUTH_SOCK}",
    "SSH_AGENT_PID": "${localEnv:SSH_AGENT_PID}"
  },
  "runArgs": [
    "--mount=type=ssh"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.ansible"
      ]
    }
  }
}
